{
  "manifest_version": 2,

  "name": "Sputnik Reviews",
  "description": "Hightlight an artist. Click. Reviews",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Get Reviews",
    "default_popup": "extension.html"
  },
  "permissions": [
    "tabs",
     "http://www.sputnikmusic.com/*",
	"https://www.sputnikmusic.com/*",
            "contextMenus"
      ]
}